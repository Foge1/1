root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{kt,kts}]
ktlint_code_style = ktlint_official
max_line_length = 140
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_filename = disabled
